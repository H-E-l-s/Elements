<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AntiEmber.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AntiEmber.AppWidgetContainer"
    android:id="@+id/widget_layout"
    android:background="#1BADF0">
    <!--android:background="#c6dac6"-->

    <!-- android:background="@drawable/widget_background" -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:src="@drawable/cup_11"
        android:id="@+id/iv_mug"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        />
    <!--         android:background="#cc0000" -->

    <TextView
        android:id="@+id/tv_currentTemperature"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.00C"
        android:textSize="26sp"
        android:typeface="monospace"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        />
    <!-- android:background="@color/black" -->

    <TextView
        android:id="@+id/tv_battery"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_currentTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99%"
        android:textSize="20sp"
        android:typeface="monospace"
        android:textStyle="normal"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_timeStamp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_threadStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="#800080" />

    <TextView
        android:id="@+id/tv_widgetId"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/tv_threadStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[-]"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_mac"
        android:layout_below="@id/tv_widgetId"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00:00:00"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/white" />



</RelativeLayout>
<!--       style="@style/Widget.AntiEmber.AppWidget.InnerView" -->